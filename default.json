{
  "description": "Default config to check every weekend",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "timezone": "Europe/Paris",
  "schedule": ["after 2am and before 10am every saturday"],
  "postUpdateOptions": ["pnpmDedupe"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 2am and before 10am every saturday"]
  },
  "reviewers": ["erwanjugand"],
  "labels": ["dependencies"],
  "commitBodyTable": true,
  "packageRules": [
    {
      "groupName": "Font Awesome",
      "matchPackagePrefixes": ["@fortawesome/"],
      "matchUpdateTypes": ["major"]
    },
    {
      "groupName": "Stylelint",
      "matchPackagePrefixes": ["stylelint"],
      "matchUpdateTypes": ["major"]
    },
    {
      "groupName": "Action Artifact",
      "matchPackagePatterns": [
        "actions/upload-artifact",
        "actions/download-artifact"
      ],
      "matchUpdateTypes": ["major"]
    },
    {
      "allowedVersions": "<5.7",
      "description": "Wait for vue-tsc to support this version",
      "matchPackageNames": ["typescript"]
    },
    {
      "allowedVersions": "<6",
      "description": "Wait Nuxt support this version",
      "matchPackageNames": ["vite"]

    }
  ]
}
