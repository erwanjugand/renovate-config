{
  "description": "Default config to check every weekend",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "timezone": "Europe/Paris",
  "schedule": ["after 4am and before 10am every saturday"],
  "postUpdateOptions": ["pnpmDedupe"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 4am and before 10am every saturday"]
  },
  "reviewers": ["erwanjugand"],
  "labels": ["dependencies"],
  "commitBodyTable": true,
  "packageRules": [
    {
      "groupName": "Font Awesome",
      "matchPackageNames": ["@fortawesome/**"],
      "matchUpdateTypes": ["major"]
    },
    {
      "groupName": "Stylelint",
      "matchPackageNames": ["stylelint**/**"],
      "matchUpdateTypes": ["major"]
    },
    {
      "groupName": "Action Artifact",
      "matchPackageNames": [
        "actions/upload-artifact",
        "actions/download-artifact"
      ],
      "matchUpdateTypes": ["major"]
    }
  ]
}
